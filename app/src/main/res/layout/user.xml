<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:gravity="center"
                android:text="编号" />

            <com.school.pandakeep.view.NormalEditText
                android:id="@+id/number"
                style="@style/et_normal_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="8"
                android:gravity="center|left"
                android:hint="必填"
                android:inputType="number" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="姓名" />

            <com.school.pandakeep.view.NormalEditText
                android:id="@+id/tv_name"
                style="@style/et_normal_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="8"
                android:gravity="center|left"
                android:hint="必填" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/key_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="电话" />


            <com.school.pandakeep.view.NormalEditText
                android:id="@+id/tv_phone"
                style="@style/et_normal_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="8"
                android:gravity="center|left"
                android:hint="必填"
                android:inputType="phone" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_banji"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="备注" />

            <com.school.pandakeep.view.NormalEditText
                android:id="@+id/remark"
                style="@style/et_normal_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="8"
                android:gravity="center|left"
                android:hint="选填" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="注册时间" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:gravity="center|left"
                android:hint="选填"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/btn_update_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="#555555"
                android:text="修改"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_project"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#555555"
            android:text="添加项目"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_consume_record"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#555555"
            android:text="消费记录"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible" />


        <Button
            android:id="@+id/btn_update_user"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#555555"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#555555"
            android:text="删除"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible" />
    </LinearLayout>
</ScrollView>